# Prevent redirect loops - catch and redirect overly long URLs or nested redirects
RewriteEngine On

# Redirect URLs longer than 2000 characters or containing nested loginForm redirects
RewriteCond %{REQUEST_URI} .{2000,} [OR]
RewriteCond %{QUERY_STRING} owa_go=.*base\.loginForm.*owa_go=.*base\.loginForm [NC]
RewriteRule ^(.*)$ /index.php?owa_do=base.loginForm [R=302,L]
